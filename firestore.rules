
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      // Allow if the user has an admin claim. For simulation, check a specific UID.
      // Replace 'YOUR_ADMIN_UID_HERE' with the actual UID of your admin user.
      return request.auth.uid == '1xoL1Fh1c8h22WjC80tQjJ99wpe2'; 
    }

    // Deny all reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow users to manage their own data
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Rules for the global tickets collection
    match /tickets/{ticketId} {
      // Any authenticated user can create a ticket.
      allow create: if request.auth != null;
      
      // Users can read their own tickets. Admin can read all tickets.
      allow read: if (request.auth.uid == resource.data.requesterUid) || isAdmin();
      
      // Admin can update any ticket (e.g., to change status).
      allow update: if isAdmin();
      
      // Only admin can delete tickets.
      allow delete: if isAdmin();
    }
  }
}
