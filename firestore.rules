
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin UID
    function isAdmin() {
      // NOTE: Replace with your actual admin user's UID from Firebase Authentication
      return request.auth.uid == "Jc1E4Njd2aOqT1Ea2szI8n1VlE82"; 
    }

    // Rules for user-specific data
    // Ensures a user can only access their own documents
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the global 'tickets' collection
    match /tickets/{ticketId} {
      // Allow any authenticated user to create a ticket
      allow create: if request.auth != null;
      
      // Allow read/update if the user is the owner OR if they are an admin.
      allow read, update: if request.auth.uid == resource.data.requesterUid || isAdmin();
      
      // Only admins can delete tickets
      allow delete: if isAdmin();
    }
  }
}
