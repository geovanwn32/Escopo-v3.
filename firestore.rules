rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the administrator.
    // Replace 'ADMIN_UID_PLACEHOLDER' with the actual UID of your admin user in Firebase Authentication.
    function isAdmin() {
      // Example UID: 'tIqZ1...'. You can find this in the Firebase Console under Authentication.
      return request.auth.uid == "ADMIN_UID_PLACEHOLDER";
    }

    // Secure user-specific data. A user can only access their own documents.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the global tickets collection.
    match /tickets/{ticketId} {
      // Any authenticated user can create a support ticket.
      allow create: if request.auth != null;
      
      // A user can read or update their own tickets. The admin can read/update all tickets.
      allow read, update: if request.auth.uid == resource.data.requesterUid || isAdmin();
      
      // Only the admin can delete tickets.
      allow delete: if isAdmin();
    }
  }
}
