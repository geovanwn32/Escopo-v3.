
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // Check for a specific UID to identify the admin
      return request.auth.uid == 'XgC8SdvlY1eK5g3sXbtxce2tiD03';
    }

    // Lock down the users collection so only the user can read/write their own documents
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the global tickets collection
    match /tickets/{ticketId} {
      // Any authenticated user can create a ticket
      allow create: if request.auth != null;

      // Only the creator or an admin can read/update a ticket
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.requesterUid || isAdmin());
      
      // Only an admin can delete a ticket
      allow delete: if isAdmin();
    }
  }
}
