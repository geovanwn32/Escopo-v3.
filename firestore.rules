rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Placeholder function to identify an admin user.
    // In a production app, this would check a custom claim or a specific document.
    function isAdmin() {
      // Replace with your actual admin UID
      return request.auth.uid == "Jq6sJv3j8aQ7P4m6E3Z9n0vY2wC2"; 
    }

    // Rules for user-specific data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Rules for the global tickets collection
    match /tickets/{ticketId} {
      // Any authenticated user can create a ticket.
      allow create: if request.auth != null;

      // Users can read/update their own tickets. The admin can read/update any ticket.
      allow read, update: if request.auth.uid == resource.data.requesterUid || isAdmin();
      
      // Only the admin can delete tickets.
      allow delete: if isAdmin();
    }
  }
}
